<a class="btn @Classes @IsActiveClass" @onclick="OnClick" href="#">@ChildContent</a>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool IsActive { get; set; }
    [Parameter]
    public string Classes { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }


    private string IsActiveClass => IsActive ? "active" : "";
}
